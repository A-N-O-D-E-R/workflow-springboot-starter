{
  "groups": [
    {
      "name": "workflow",
      "type": "com.anode.workflow.spring.autoconfigure.WorkflowProperties",
      "sourceType": "com.anode.workflow.spring.autoconfigure.WorkflowProperties"
    },
    {
      "name": "workflow.storage",
      "type": "com.anode.workflow.spring.autoconfigure.WorkflowProperties$Storage",
      "sourceType": "com.anode.workflow.spring.autoconfigure.WorkflowProperties",
      "sourceMethod": "getStorage()"
    },
    {
      "name": "workflow.jpa",
      "type": "com.anode.workflow.spring.autoconfigure.WorkflowProperties$Jpa",
      "sourceType": "com.anode.workflow.spring.autoconfigure.WorkflowProperties",
      "sourceMethod": "getJpa()"
    }
  ],
  "properties": [
    {
      "name": "workflow.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable or disable workflow engine auto-configuration.",
      "defaultValue": true
    },
    {
      "name": "workflow.storage.type",
      "type": "com.anode.workflow.spring.autoconfigure.WorkflowProperties$StorageType",
      "description": "Storage type: JPA, MEMORY, FILE, or CUSTOM.",
      "defaultValue": "jpa"
    },
    {
      "name": "workflow.storage.file-path",
      "type": "java.lang.String",
      "description": "File path for file-based storage.",
      "defaultValue": "./workflow-data"
    },
    {
      "name": "workflow.storage.custom-bean-name",
      "type": "java.lang.String",
      "description": "Custom storage bean name (if type is CUSTOM)."
    },
    {
      "name": "workflow.jpa.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable JPA-based storage.",
      "defaultValue": true
    },
    {
      "name": "workflow.jpa.entity-manager-factory-ref",
      "type": "java.lang.String",
      "description": "EntityManagerFactory bean name.",
      "defaultValue": "entityManagerFactory"
    },
    {
      "name": "workflow.jpa.auto-create-schema",
      "type": "java.lang.Boolean",
      "description": "Enable automatic schema creation.",
      "defaultValue": false
    },
    {
      "name": "workflow.event-handler.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable default event handler.",
      "defaultValue": true
    },
    {
      "name": "workflow.event-handler.bean-name",
      "type": "java.lang.String",
      "description": "Custom event handler bean name."
    },
    {
      "name": "workflow.sla.enabled",
      "type": "java.lang.Boolean",
      "description": "Enable SLA queue manager.",
      "defaultValue": false
    },
    {
      "name": "workflow.sla.queue-manager-bean",
      "type": "java.lang.String",
      "description": "Custom SLA queue manager bean name."
    }
  ],
  "hints": [
    {
      "name": "workflow.storage.type",
      "values": [
        {
          "value": "jpa",
          "description": "JPA/Hibernate-based storage (recommended for production)."
        },
        {
          "value": "memory",
          "description": "In-memory storage (for testing)."
        },
        {
          "value": "file",
          "description": "File-based JSON storage (for development/testing)."
        },
        {
          "value": "custom",
          "description": "Custom storage implementation."
        }
      ]
    }
  ]
}
